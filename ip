<body>

<div class="container">
    <h2>تغییر آی‌پی و پورت کانفیگ‌های V2Ray</h2>
    
    <label>لیست کانفیگ‌ها را اینجا وارد کنید:</label>
    <textarea id="inputConfigs" placeholder="vless://...&#10;vmess://...&#10;trojan://..."></textarea>

    <div class="input-group">
        <input type="text" id="newIp" placeholder="آی‌پی جدید (مثلاً: 188.114.97.3)">
        <input type="number" id="newPort" placeholder="پورت جدید (مثلاً: 8443)">
    </div>

    <button onclick="modifyConfigs()">اعمال تغییرات و کپی در کلیپ‌بورد</button>

    <label style="margin-top: 20px; display: block;">خروجی:</label>
    <textarea id="outputConfigs" readonly placeholder="کانفیگ‌های اصلاح شده اینجا ظاهر می‌شوند..."></textarea>
    
    <div class="footer">
        این ابزار فقط بخش Address و Port را تغییر می‌دهد و به سایر پارامترها دست نمی‌زند.
    </div>
</div>

<script>
    function modifyConfigs() {
        const input = document.getElementById('inputConfigs').value;
        const newIp = document.getElementById('newIp').value.trim();
        const newPort = document.getElementById('newPort').value.trim();
        
        if (!newIp ||!newPort) {
            alert("لطفاً آی‌پی و پورت جدید را وارد کنید.");
            return;
        }

        const lines = input.split(/\r?\n/);
        const modifiedLines = lines.map(line => {
            line = line.trim();
            if (!line) return "";

            // هندل کردن VLESS و Trojan (ساختار URI)
            if (line.startsWith("vless://") |

| line.startsWith("trojan://")) {
                try {
                    // Regex برای جدا کردن بخش‌های لینک
                    // $1: پروتکل، $2: اطلاعات قبل از آدرس، $3: آدرس فعلی، $4: پورت فعلی، $5: بقیه لینک
                    const regex = /^(vless:\/\/|trojan:\/\/)([^@]+@)([^:]+):(\d+)(.*)$/;
                    return line.replace(regex, `$1$2${newIp}:${newPort}$5`);
                } catch (e) { return line; }
            }

            // هندل کردن VMess (ساختار Base64 JSON)
            if (line.startsWith("vmess://")) {
                try {
                    const b64Part = line.replace("vmess://", "");
                    const jsonStr = atob(b64Part);
                    const config = JSON.parse(jsonStr);
                    
                    config.add = newIp;
                    config.port = parseInt(newPort);
                    
                    return "vmess://" + btoa(JSON.stringify(config));
                } catch (e) { return line; }
            }

            return line; // اگر فرمت ناشناخته بود
        });

        const finalResult = modifiedLines.filter(l => l!== "").join("\n");
        document.getElementById('outputConfigs').value = finalResult;
        
        // کپی خودکار در کلیپ‌بورد
        navigator.clipboard.writeText(finalResult);
        alert("تغییرات اعمال و در کلیپ‌بورد کپی شد!");
    }
</script>

</body>
</html>
